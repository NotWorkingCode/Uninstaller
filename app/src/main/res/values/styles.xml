<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="ItemApp">
        <item name="cardCornerRadius">@dimen/main.recycler.item.radius</item>
    </style>
    <style name="ItemApp.Image">
        <item name="android:layout_width">@dimen/main.recycler.item.image.size</item>
        <item name="android:layout_height">@dimen/main.recycler.item.image.size</item>
        <item name="android:layout_marginLeft">@dimen/main.recycler.item.padding</item>
    </style>
    <style name="ItemApp.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/main.recycler.item.padding</item>
    </style>
    <style name="ItemApp.Package">
        <item name="android:layout_marginLeft">@dimen/main.recycler.item.padding</item>
    </style>
</resources>